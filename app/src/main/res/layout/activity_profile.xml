<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

<!--    <androidx.appcompat.widget.ActionMenuView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@color/colorPrimaryDark"-->
<!--        app:menu="@menu/logout"/>-->

    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="@string/profile"
        android:textAppearance="@style/profile"
        android:gravity="left|center_vertical"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/gb1"
        app:civ_border_color="#fff"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp" />



    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:text=""
        android:textAppearance="@style/profile"
        android:gravity="top|center"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:text=""
        android:textAppearance="@style/fransbennit"
        android:gravity="top|center"
        />

    <TextView
        android:id="@+id/created_at"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="260dp"
        android:text=""
        android:textAppearance="@style/fransbennit"
        android:gravity="top|center"
        />

    <TextView
        android:id="@+id/number_artwork"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:text=""
        android:textAppearance="@style/fransbennit"
        android:gravity="top|center"
        />

    <Button
        android:id="@+id/editprofile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="310dp"
        android:text="Edit Profile"
        android:textAppearance="@style/sp16_ffffff_bold"
        android:background="@drawable/editprofile"
        android:onClick="editProfile"
        />

    <Button
        android:id="@+id/button_about"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="380dp"
        android:layout_marginStart="-3dp"
        android:layout_marginEnd="-3dp"
        android:text="About App"
        android:textAppearance="@style/profile"
        android:background="@drawable/buttonabout"
        android:gravity="left|center_vertical"
        android:paddingLeft="32dp"
        android:onClick="aboutApp"
        />

    <Button
        android:id="@+id/button_sendfeedback"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="457dp"
        android:layout_marginStart="-3dp"
        android:layout_marginEnd="-3dp"
        android:text="Send Feedback"
        android:textAppearance="@style/profile"
        android:background="@drawable/buttonabout"
        android:gravity="left|center_vertical"
        android:paddingLeft="32dp"
        android:onClick="sendFeedback"
        />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="534dp"
        android:layout_marginStart="-3dp"
        android:layout_marginEnd="-3dp"
        android:text="App Version \n 1.0.0"
        android:textAppearance="@style/fransbennit"
        android:background="@drawable/buttonabout"
        android:gravity="left|center_vertical"
        android:paddingLeft="32dp"
        android:onClick="logout"
        />

</RelativeLayout>