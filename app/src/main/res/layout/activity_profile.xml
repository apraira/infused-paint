        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="51dp"
            android:src="@drawable/gb1"
            app:civ_border_color="#fff"
            android:layout_centerHorizontal="true"
            app:civ_border_width="2dp" />



        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="181dp"
            android:text=""
            android:textAppearance="@style/profile"
            android:gravity="top|center"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="211dp"
            android:text=""
            android:textAppearance="@style/fransbennit"
            android:gravity="top|center"
            />

        <TextView
            android:id="@+id/created_at"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="231dp"
            android:text=""
            android:textAppearance="@style/fransbennit"
            android:gravity="top|center"
            />

        <TextView
            android:id="@+id/number_artwork"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="251dp"
            android:text=""
            android:textAppearance="@style/fransbennit"
            android:gravity="top|center"
            />

        <Button
            android:id="@+id/editprofile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="281dp"
            android:text="Edit Profile"
            android:textAppearance="@style/sp16_ffffff_bold"
            android:background="@drawable/editprofile"
            android:onClick="editProfile"
            />

        <Button
            android:id="@+id/button_about"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="351dp"
            android:layout_marginStart="-3dp"
            android:layout_marginEnd="-3dp"
            android:text="About App"
            android:textAppearance="@style/profile"
            android:background="@drawable/buttonabout"
            android:gravity="left|center_vertical"
            android:paddingLeft="32dp"
            android:onClick="aboutApp"
            />

        <Button
            android:id="@+id/button_sendfeedback"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="428dp"
            android:layout_marginStart="-3dp"
            android:layout_marginEnd="-3dp"
            android:text="Send Feedback"
            android:textAppearance="@style/profile"
            android:background="@drawable/buttonabout"
            android:gravity="left|center_vertical"
            android:paddingLeft="32dp"
            android:onClick="sendFeedback"
            />

        <Button
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="505dp"
            android:layout_marginStart="-3dp"
            android:layout_marginEnd="-3dp"
            android:text="App Version \n 1.0.0"
            android:textAppearance="@style/fransbennit"
            android:background="@drawable/buttonabout"
            android:gravity="left|center_vertical"
            android:paddingLeft="32dp"
            android:onClick="logout"
            />

    </RelativeLayout>