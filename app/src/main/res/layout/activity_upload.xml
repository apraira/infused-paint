<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-24dp"
        android:background="@drawable/upload_background"
        />

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="411dp"
        android:layout_height="248dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="459dp"
        android:background="@drawable/upload"
        />

    <TextView
        android:id="@+id/upload_your"
        android:layout_width="240dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="482dp"
        android:text="@string/upload_your"
        android:textAppearance="@style/upload_your"
        android:gravity="top"
        />

    <ImageButton
        android:id="@+id/rectangle_3"
        android:layout_width="160dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="526dp"
        android:background="@drawable/upload_button"
        />

    <View
        android:id="@+id/ic_camera"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="84dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="542dp"
        android:background="@drawable/ic_camera" />

    <TextView
        android:id="@+id/from_camera"
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="605dp"
        android:text="@string/from_camera"
        android:textAppearance="@style/from"
        android:gravity="center_horizontal|top"
        />

    <ImageButton
        android:id="@+id/rectangle_4"
        android:layout_width="160dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="221dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="526dp"
        android:background="@drawable/upload_button"
        />

    <View
        android:id="@+id/ic_gallery"
        android:layout_width="48dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="277dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="547dp"
        android:background="@drawable/ic_gallery" />

    <TextView
        android:id="@+id/from_gallery"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="271dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="605dp"
        android:text="@string/from_galler"
        android:textAppearance="@style/from"
        android:gravity="center_horizontal|top"
        />

</RelativeLayout>