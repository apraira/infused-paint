<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/hi_welcome_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:text="@string/hi_welcome_"
            android:textAppearance="@style/hi_welcome_"
            android:gravity="left" />

        <TextView
            android:id="@+id/pick_your_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="@string/pick_your_r"
            android:textAppearance="@style/pick_your_r"
            android:gravity="left" />

        <ImageView
            android:id="@+id/landpage_pict1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/landpage_pict1"
            app:srcCompat="@drawable/gb1"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/cursor_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-45dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/pict_cursor"
            />

        <ImageView
            android:id="@+id/rectangle_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/landpage_pict2"
            app:srcCompat="@drawable/gb2"
            android:layout_gravity="center_horizontal"/>

